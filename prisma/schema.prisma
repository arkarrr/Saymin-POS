generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           Int        @id @default(autoincrement())
  name         String
  email        String     @unique
  passwordHash String
  isActive     Boolean    @default(true)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  roles        UserRole[]
}

model Role {
  id          Int        @id @default(autoincrement())
  name        String     @unique  // e.g. "OWNER", "CASHIER"
  displayName String              // e.g. "Owner", "Cashier"
  description String?

  users       UserRole[]
}

model UserRole {
  userId Int
  roleId Int

  assignedAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  role   Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId]) // composite PK so each (user, role) is unique
}
